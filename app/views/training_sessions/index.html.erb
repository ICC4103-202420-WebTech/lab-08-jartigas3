<div class="container mt-4">
  <h1>My Training Sessions</h1>
  <table class="table table-striped mt-3">
    <thead>
      <tr>
        <th>Date</th>
        <th>Activity</th>
        <th>Duration (minutes)</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @training_sessions.each do |session| %>
        <tr>
          <td><%= session.date %></td>
          <td><%= session.activity %></td>
          <td><%= session.duration %></td>
          <td><%= session.description %></td>
          <td>
            <%= link_to 'Edit', edit_training_session_path(session), class: "btn btn-sm btn-primary" %>
            <%= link_to 'Delete', training_session_path(session), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'New Training Session', new_training_session_path, class: "btn btn-success mt-3" %>
</div>
