<div class="container mt-4">
  <h1>New Training Session</h1>
  <%= form_with model: @training_session, local: true do |form| %>
    <div class="form-group">
      <%= form.label :date %>
      <%= form.date_field :date, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :activity %>
      <%= form.text_field :activity, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :duration %>
      <%= form.number_field :duration, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :description %>
      <%= form.text_area :description, class: "form-control" %>
    </div>

    <%= form.submit "Create Training Session", class: "btn btn-primary" %>
  <% end %>
</div>
